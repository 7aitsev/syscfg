echo ~/.bashrc

# GPG for signing git commits
GPG_TTY=$(tty)
export GPG_TTY

alias {{ remote_host }} putin='ssh {{ remote_ip }}'
alias showbinding='bind -p | grep -v '\''^#\|self-insert\|^$'\'''
alias tmux='TERM=xterm-256color tmux'
alias youtube-dl-m4a='youtube-dl -f bestaudio[ext=m4a] --extract-audio \
  --audio-format m4a -o '\''%(title)s.%(ext)s'\'''
